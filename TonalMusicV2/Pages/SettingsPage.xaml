<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TonalMusicV2.Pages.SettingsPage"
             Title="{Binding SettingsTitle}">

    <VerticalStackLayout Padding="20" Spacing="20">
        
        <Label Text="{Binding LanguageLabel}" FontSize="18" HorizontalOptions="Center" />

        <Picker ItemsSource="{Binding AvailableLanguages}" 
                SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                Title="{Binding PickerPlaceholder}" />

    </VerticalStackLayout>
</ContentPage>