<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TonalMusicV2.Pages.About"
             xmlns:p="clr-namespace:TonalMusicV2.Resources.Languages"
             Title="About">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center">
            
            <Label Text="Dawid Gruszka" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{DynamicResource PrimaryTextColor}"/>

            <Label Text="2ºDAM" FontSize="18" HorizontalOptions="Center" TextColor="{DynamicResource SecondaryTextColor}"/>

            <Label Text="{x:Static p:AppResources.Año}" FontSize="18" HorizontalOptions="Center" TextColor="{DynamicResource SecondaryTextColor}"/>

            <Label Text="{x:Static p:AppResources.TextoAbout}" FontSize="16" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{DynamicResource SecondaryTextColor}" MaxLines="3" LineBreakMode="WordWrap"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>