<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TonalMusicV2.MainPage"
             xmlns:p="clr-namespace:TonalMusicV2.Resources.Languages"
             Title="{x:Static p:AppResources.Bienvenido_a_Tonal}">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Text="{x:Static p:AppResources.Artistas}" Margin="30,20,0,0" FontSize="Title" FontAttributes="Bold,Italic"/>
            </Grid>
            <Grid Grid.Row="1">
                <ScrollView Margin="0,10,0,0" Orientation="Horizontal">
                    <CollectionView ItemsSource="{Binding Artist}" SelectionMode="Single"
                                    SelectionChangedCommand="{Binding ClickArtistCommand}"
                                    SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" CornerRadius="10" HasShadow="True" WidthRequest="150" HeightRequest="200">
                                    <VerticalStackLayout>
                                        <Image Source="{Binding ArtistLogo}" HeightRequest="150" WidthRequest="150" Aspect="AspectFill"/>
                                        <Label Text="{Binding Name}" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Text="{x:Static p:AppResources.Albumes}" Margin="30,0,0,0" FontSize="Title" FontAttributes="Bold,Italic"/>
            </Grid>
            <Grid Grid.Row="1">
                <ScrollView Margin="0,10,0,0" Orientation="Horizontal">
                    <CollectionView ItemsSource="{Binding Album}" SelectionMode="Single"
                                    SelectionChangedCommand="{Binding ClickAlbumCommand}"
                                    SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" CornerRadius="10" HasShadow="True" WidthRequest="150" HeightRequest="200">
                                    <VerticalStackLayout>
                                        <Image Source="{Binding Picture}" HeightRequest="150" WidthRequest="150" Aspect="AspectFill"/>
                                        <Label Text="{Binding Title}" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Text="{x:Static p:AppResources.Canciones}" Margin="30,0,0,0" FontSize="Title" FontAttributes="Bold,Italic"/>
            </Grid>
            <Grid Grid.Row="1">
                <ScrollView Margin="0,10,0,0" Orientation="Horizontal">
                    <CollectionView ItemsSource="{Binding Songs}" SelectionMode="Single"
                        SelectionChangedCommand="{Binding ClickSongCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" CornerRadius="10" HasShadow="True" WidthRequest="150" HeightRequest="200">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
