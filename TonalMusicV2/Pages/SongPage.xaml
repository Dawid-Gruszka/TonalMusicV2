<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TonalMusicV2.Pages.SongPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding Songs.Title}">

    <StackLayout Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
        
        <Label Text="{Binding Songs.Title}" FontSize="24" HorizontalOptions="Center" />
        
        <toolkit:MediaElement Source="{Binding Songs.FullFileUrl}" ShouldShowPlaybackControls="True" />
        
        <Label Text="{Binding Songs.Publisher}" FontSize="18" HorizontalOptions="Center" />
        
        <Label Text="{Binding Songs.Year}" FontSize="18" HorizontalOptions="Center" />

    </StackLayout>
</ContentPage>