<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TonalMusicV2.Pages.ArtistPage"
             Title="{Binding Artista.Name}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Border><Image Source="{Binding Artista.ArtistLogo}"  Aspect="AspectFit" HeightRequest="100" HorizontalOptions="Center" />
            </Border>

            <Label Text="{Binding Artista.Name}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>